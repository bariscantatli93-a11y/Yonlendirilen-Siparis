<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Sipari≈ü Haritasƒ±</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body { margin: 0; font-family: sans-serif; height: 100vh; display: flex; flex-direction: column; overflow: hidden; }
        #map { flex: 1; z-index: 1; }
        #menu-btn { position: fixed; top: 15px; left: 15px; z-index: 1001; background: #e63946; color: white; border: none; padding: 12px; border-radius: 50%; cursor: pointer; box-shadow: 0 4px 10px rgba(0,0,0,0.3); }
        #drawer { position: fixed; left: -320px; top: 0; width: 300px; height: 100%; background: #fff; z-index: 1000; transition: 0.3s; box-shadow: 5px 0 15px rgba(0,0,0,0.1); overflow-y: auto; padding: 20px; }
        #drawer.open { left: 0; }
        .order-card { background: #f8f9fa; border-left: 5px solid #e63946; padding: 15px; border-radius: 8px; margin-bottom: 12px; cursor: pointer; }
        .form-container { display: flex; flex-direction: column; gap: 8px; min-width: 240px; }
        input, select, textarea { padding: 10px; border: 1px solid #ddd; border-radius: 6px; width: 100%; box-sizing: border-box; }
        .save-btn { background: #2ecc71; color: white; border: none; padding: 12px; border-radius: 6px; font-weight: bold; }
        .wp-btn { background: #25d366; color: white; padding: 10px; border-radius: 6px; text-decoration: none; display: block; text-align: center; margin-top: 10px; font-weight: bold; }
    </style>
</head>
<body>
    <button id="menu-btn" onclick="toggleDrawer()"><i class="fas fa-bars"></i></button>
    <div id="drawer">
        <h3>Sipari≈üler</h3>
        <div id="order-list"></div>
    </div>
    <div id="map"></div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        let map = L.map('map').setView([39.93, 32.85], 13);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);

        let orders = JSON.parse(localStorage.getItem('orders')) || [];
        let tempLatLng = null;

        function toggleDrawer() { document.getElementById('drawer').classList.toggle('open'); }

        map.on('click', function(e) {
            tempLatLng = e.latlng;
            const content = `
                <div class="form-container">
                    <h3>Yeni Sipari≈ü</h3>
                    <input type="text" id="custName" placeholder="M√º≈üteri Adƒ±">
                    <input type="tel" id="custPhone" placeholder="Telefon">
                    <textarea id="orderItems" placeholder="Sipari≈ü (√ñrn: 2x Zurna)"></textarea>
                    <input type="number" id="totalPrice" placeholder="Tutar (TL)">
                    <select id="payMethod"><option>Nakit</option><option>Online</option></select>
                    <button class="save-btn" onclick="saveOrder()">Kaydet</button>
                </div>`;
            L.popup().setLatLng(e.latlng).setContent(content).openOn(map);
        });

        function saveOrder() {
            const o = {
                id: "SIP-" + Math.floor(1000 + Math.random() * 9000),
                name: document.getElementById('custName').value || "ƒ∞simsiz",
                phone: document.getElementById('custPhone').value || "-",
                items: document.getElementById('orderItems').value || "-",
                price: document.getElementById('totalPrice').value || "0",
                pay: document.getElementById('payMethod').value,
                lat: tempLatLng.lat, lng: tempLatLng.lng,
                time: new Date().toLocaleTimeString('tr-TR')
            };
            orders.push(o);
            localStorage.setItem('orders', JSON.stringify(orders));
            location.reload(); 
        }

        function render() {
            const list = document.getElementById('order-list');
            orders.forEach(o => {
                const marker = L.marker([o.lat, o.lng]).addTo(map);
                const msg = `üö® *YENƒ∞ Sƒ∞PARƒ∞≈û* #${o.id}\nüë§ *M√º≈üteri:* ${o.name}\nüìû *Tel:* ${o.phone}\nüõí *Sipari≈ü:* ${o.items}\nüí∞ *√ñdeme:* ${o.pay} (${o.price} TL)\nüìç *Konum:* https://www.google.com/maps?q=${o.lat},${o.lng}`;
                
                marker.bindPopup(`<b>${o.id} - ${o.name}</b><br><a class="wp-btn" href="https://wa.me/?text=${encodeURIComponent(msg)}" target="_blank">WhatsApp Payla≈ü</a>`);
                
                const card = document.createElement('div');
                card.className = 'order-card';
                card.innerHTML = `<b>#${o.id} - ${o.name}</b><br><small>${o.price} TL - ${o.time}</small>`;
                card.onclick = () => { map.flyTo([o.lat, o.lng], 17); toggleDrawer(); };
                list.appendChild(card);
            });
        }
        map.locate({setView: true, maxZoom: 15});
        render();
    </script>
</body>
</html>
