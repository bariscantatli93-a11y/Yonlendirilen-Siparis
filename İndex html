<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Sipari≈ü Takip v3</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root { --primary: #e63946; --secondary: #1d3557; --accent: #2ecc71; }
        body { margin: 0; font-family: 'Segoe UI', sans-serif; height: 100vh; display: flex; flex-direction: column; overflow: hidden; background: #f4f7f6; }
        #map { flex: 1; z-index: 1; }
        #menu-btn { position: fixed; top: 15px; left: 15px; z-index: 1001; background: var(--primary); color: white; border: none; padding: 12px 15px; border-radius: 50%; cursor: pointer; box-shadow: 0 4px 15px rgba(230, 57, 70, 0.4); }
        #drawer { position: fixed; left: -320px; top: 0; width: 300px; height: 100%; background: #fff; z-index: 1000; transition: 0.3s cubic-bezier(0.4, 0, 0.2, 1); box-shadow: 5px 0 25px rgba(0,0,0,0.15); overflow-y: auto; padding: 20px; }
        #drawer.open { left: 0; }
        .order-card { background: #fff; border-left: 6px solid var(--primary); padding: 15px; border-radius: 10px; margin-bottom: 15px; cursor: pointer; border: 1px solid #eee; border-left-width: 6px; }
        .form-container { display: flex; flex-direction: column; gap: 10px; min-width: 260px; padding: 10px 5px; }
        input, select, textarea { padding: 12px; border: 1.5px solid #eee; border-radius: 8px; font-size: 14px; width: 100%; box-sizing: border-box; }
        .save-btn { background: var(--accent); color: white; border: none; padding: 14px; border-radius: 8px; font-weight: bold; cursor: pointer; }
        .wp-btn { background: #25d366; color: white; padding: 12px; border-radius: 8px; text-decoration: none; display: flex; align-items: center; justify-content: center; gap: 8px; margin-top: 12px; font-weight: bold; }
        .bike-icon { color: var(--primary); font-size: 24px; }
    </style>
</head>
<body>
    <button id="menu-btn" onclick="toggleDrawer()"><i class="fas fa-bars"></i></button>
    <div id="drawer">
        <h2 style="color: var(--secondary);"><i class="fas fa-motorcycle"></i> Sipari≈üler</h2>
        <div id="order-list"></div>
    </div>
    <div id="map"></div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        let map = L.map('map', { zoomControl: false }).setView([39.9334, 32.8597], 13);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);

        let orders = JSON.parse(localStorage.getItem('orders')) || [];
        let tempLatLng = null;

        const courierIcon = L.divIcon({
            html: '<i class="fas fa-motorcycle bike-icon"></i>',
            className: 'custom-bike-icon',
            iconSize: [30, 30],
            iconAnchor: [15, 15]
        });

        function toggleDrawer() { document.getElementById('drawer').classList.toggle('open'); }

        map.on('click', function(e) {
            tempLatLng = e.latlng;
            const content = `
                <div class="form-container">
                    <h3>Yeni Sipari≈ü</h3>
                    <input type="text" id="custName" placeholder="M√º≈üteri Ad Soyad">
                    <input type="tel" id="custPhone" placeholder="Telefon">
                    <textarea id="orderItems" rows="4" placeholder="√úr√ºnler (Her satƒ±ra bir tane)"></textarea>
                    <input type="number" id="totalPrice" placeholder="Toplam Tutar">
                    <select id="payMethod">
                        <option value="Nakit">Nakit √ñdeme</option>
                        <option value="Online">Online √ñdeme</option>
                        <option value="Kredi Kartƒ±">Kapƒ±da Kredi Kartƒ±</option>
                    </select>
                    <button class="save-btn" onclick="saveOrder()">Haritaya Ekle</button>
                </div>`;
            L.popup().setLatLng(e.latlng).setContent(content).openOn(map);
        });

        function saveOrder() {
            const rawItems = document.getElementById('orderItems').value.trim();
            const o = {
                id: "SIP-" + Math.floor(1000 + Math.random() * 9000),
                name: document.getElementById('custName').value || "ƒ∞simsiz",
                phone: document.getElementById('custPhone').value || "-",
                items: rawItems,
                price: document.getElementById('totalPrice').value || "0",
                pay: document.getElementById('payMethod').value,
                lat: tempLatLng.lat, lng: tempLatLng.lng,
                time: new Date().toLocaleTimeString('tr-TR', {hour: '2-digit', minute:'2-digit'})
            };
            orders.push(o);
            localStorage.setItem('orders', JSON.stringify(orders));
            location.reload(); 
        }

        function render() {
            const list = document.getElementById('order-list');
            orders.forEach(o => {
                const marker = L.marker([o.lat, o.lng], { icon: courierIcon }).addTo(map);
                const itemList = o.items.split('\n').map(item => '‚Ä¢ ' + item.trim()).join('\n');
                const msg = `üö® *YENƒ∞ Sƒ∞PARƒ∞≈û* #${o.id}\n\nüë§ *M√º≈üteri:* ${o.name}\nüìû *Tel:* ${o.phone}\nüõí *Sipari≈ü:* \n${itemList}\n\nüí∞ *√ñdeme:* ${o.pay} (${o.price} TL)\nüïí *Saat:* ${o.time}\n\nüìç *Konum:* https://www.google.com/maps?q=${o.lat},${o.lng}`;
                
                marker.bindPopup(`
                    <div style="font-size:14px; min-width:200px">
                        <b>${o.id} - ${o.name}</b><br>
                        <div style="margin:8px 0; padding:8px; background:#f9f9f9; border-radius:5px;">
                            ${o.items.replace(/\n/g, '<br>')}
                        </div>
                        <a class="wp-btn" href="https://wa.me/?text=${encodeURIComponent(msg)}" target="_blank">WhatsApp'a G√∂nder</a>
                        <button onclick="deleteOrder('${o.id}')" style="background:none; border:none; color:#bbb; cursor:pointer; width:100%; margin-top:10px;">Sipari≈üi Sil</button>
                    </div>
                `);
                
                const card = document.createElement('div');
                card.className = 'order-card';
                card.innerHTML = `<h4>#${o.id} - ${o.name}</h4><small>${o.time} | ${o.price} TL</small>`;
                card.onclick = () => { map.flyTo([o.lat, o.lng], 18); toggleDrawer(); };
                list.appendChild(card);
            });
        }

        window.deleteOrder = function(id) {
            if(confirm("Silinsin mi?")) {
                orders = orders.filter(o => o.id !== id);
                localStorage.setItem('orders', JSON.stringify(orders));
                location.reload();
            }
        }
        map.locate({setView: true, maxZoom: 15});
        render();
    </script>
</body>
</html>
